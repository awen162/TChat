                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="0dp" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp" >

                        <EditText
